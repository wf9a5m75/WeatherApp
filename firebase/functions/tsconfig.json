{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017"
  },
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "watchOptions": {
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "lib"],
  }
}
